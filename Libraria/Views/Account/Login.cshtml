

@{
    ViewData["Title"] = "Log in";
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container mt-5">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <div class="card o-hidden border-5 shadow-lg my-5 rounded-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row justify-content-center">
                <div class="col-lg-5 d-none d-lg-block bg-register-image text-center">
                    <img src="/img/login-image.png" alt="Login Image" style="width:300px; height:400px;" class="ml-5">
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Login to Student Information System!</h1>
                        </div>
                        <form method="post" action="/Account/Login" class="user">
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <div class="form-floating mb-3">
                                        <input type="email" id="email" name="email" class="form-control form-control-user" autocomplete="username" aria-required="true" placeholder="Email" required />
                                        
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-floating mb-3">
                                        <input type="password" id="password" name="password" class="form-control form-control-user" autocomplete="new-password" aria-required="true" placeholder="Password" required />
                                        
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="/Account/Register">Don't have an account? Register!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
